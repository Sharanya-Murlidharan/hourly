<%-include('../../views/partials/user/header')%>
<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
        line-height: 1.6;
        color: #333;
    }

    /* Hero Section */
    .hero {
        display: flex;
        width: 100%;
        height: 400px;
        margin-bottom: 40px;
        background: #C9D6EA;
    }

    .hero-img-wrap {
        width: 50%;
        height: 100%;
        overflow: hidden;
    }

    .hero-img {
        width: 49%;
        height: 113%;
        object-fit: cover;
    }

    .hero-text {
        width: 50%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        color: white;
        /* background: rgba(0, 0, 0, 0.7); */
        padding: 20px;
    }

    .hero-text h2 {
        font-size: 2.5rem;
        margin-bottom: 10px;
    }

    .hero-text p {
        font-size: 1.2rem;
        margin-bottom: 20px;
    }

    .discover-btn {
        background-color: #05445E;
        color: white;
        border: none;
        padding: 10px 20px;
        font-size: 1rem;
        cursor: pointer;
        border-radius: 5px;
        transition: background-color 0.3s;
    }

    .discover-btn:hover {
        background-color: #043b52;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
        .hero {
            flex-direction: column;
            height: auto;
        }

        .hero-img-wrap, .hero-text {
            width: 100%;
            height: 300px;
        }

        .hero-text h2 {
            font-size: 2rem;
        }

        .hero-text p {
            font-size: 1rem;
        }
    }

    @media (max-width: 480px) {
        .hero-img-wrap, .hero-text {
            height: 200px;
        }

        .hero-text h2 {
            font-size: 1.5rem;
            color: black;
        }

        .hero-text p {
            font-size: 0.9rem;
        }
    }

    /* Rest of your existing styles remain unchanged */
    .categories {
        display: flex;
        justify-content: center;
        gap: 10px;
        margin-bottom: 40px;
        flex-wrap: wrap;
    }

    .category-btn {
        background-color: #f5f5f5;
        border: 1px solid #ddd;
        padding: 10px 20px;
        font-size: 1rem;
        cursor: pointer;
        border-radius: 5px;
        transition: background-color 0.3s;
    }

    .category-btn:hover, .all-btn {
        background-color: #05445E;
        color: white;
    }

    .new-arrivals, .trending-products {
        padding: 20px;
        margin-bottom: 40px;
    }

    .new-arrivals h3, .trending-products h3 {
        font-size: 1.8rem;
        margin-bottom: 20px;
        text-align: center;
    }

    .products {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 20px;
    }

    .product-cart-wrap {
        width: 250px;
        border: 1px solid #ddd;
        border-radius: 5px;
        overflow: hidden;
        background: white;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s;
    }

    .product-cart-wrap:hover {
        transform: translateY(-5px);
    }

    .product-img-action-wrap {
        position: relative;
        width: 100%;
        height: 200px;
        overflow: hidden;
    }

    .product-img-zoom img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s;
    }

    .product-img-zoom:hover img {
        transform: scale(1.1);
    }

    .wishlist-btn {
        position: absolute;
        top: 10px;
        right: 10px;
        background: rgba(0, 0, 0, 0.7);
        color: white;
        border: none;
        padding: 5px 10px;
        border-radius: 50%;
        cursor: pointer;
        transition: background 0.3s;
    }

    .wishlist-btn:hover {
        background: #05445E;
    }

    .product-content-wrap {
        padding: 10px;
        text-align: center;
    }

    .product-content-wrap h6 {
        font-size: 1.1rem;
        margin-bottom: 5px;
    }

    .product-content-wrap h5 {
        font-size: 1.2rem;
        color: #05445E;
        margin-bottom: 10px;
    }

    .product-content-wrap a {
        display: inline-block;
        background-color: #05445E;
        color: white;
        padding: 8px 15px;
        text-decoration: none;
        border-radius: 5px;
        transition: background-color 0.3s;
    }

    .product-content-wrap a:hover {
        background-color: #043b52;
    }

    .product-card {
        width: 200px;
        border: 1px solid #ddd;
        border-radius: 5px;
        overflow: hidden;
        background: white;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        text-align: center;
        padding: 10px;
        transition: transform 0.3s;
    }

    .product-card:hover {
        transform: translateY(-5px);
    }

    .product-card img {
        width: 100%;
        height: 150px;
        object-fit: cover;
    }

    .product-card p:first-of-type {
        font-size: 1rem;
        margin: 10px 0;
    }

    .product-card p:last-of-type {
        font-size: 1.1rem;
        color: #05445E;
        margin-bottom: 10px;
    }

    .product-card span {
        color: red;
        font-size: 0.9rem;
    }

    .view-all-btn {
        display: block;
        margin: 20px auto;
        background-color: #05445E;
        color: white;
        border: none;
        padding: 10px 20px;
        font-size: 1rem;
        cursor: pointer;
        border-radius: 5px;
        transition: background-color 0.3s;
    }

    .view-all-btn:hover {
        background-color: #043b52;
    }

    @media (max-width: 768px) {
        .product-cart-wrap, .product-card {
            width: 180px;
        }

        .product-img-action-wrap {
            height: 150px;
        }

        .categories {
            flex-direction: column;
            align-items: center;
        }

        .category-btn {
            width: 80%;
            margin-bottom: 10px;
        }
    }

    @media (max-width: 480px) {
        .product-cart-wrap, .product-card {
            width: 150px;
        }

        .product-img-action-wrap {
            height: 120px;
        }

        .product-content-wrap h6 {
            font-size: 1rem;
        }

        .product-content-wrap h5 {
            font-size: 1.1rem;
        }
    }

    /* New Arrivals Section */
    .new-arrivals {
        padding: 20px;
        margin-bottom: 40px;
    }

    .new-arrivals h3 {
        font-size: 1.8rem;
        margin-bottom: 20px;
        text-align: center;
    }

    .new-arrivals .products {
        width: 100%;
        display: flex;
        flex-wrap: nowrap;
        overflow-x: auto;
        overflow-y: hidden;
        gap: 20px;
        padding-bottom: 10px;
        scrollbar-width: thin;
        scrollbar-color: #05445E #f5f5f5;
        scroll-snap-type: x mandatory;
    }

    .new-arrivals .products::-webkit-scrollbar {
        height: 8px;
    }

    .new-arrivals .products::-webkit-scrollbar-track {
        background: #f5f5f5;
    }

    .new-arrivals .products::-webkit-scrollbar-thumb {
        background: #05445E;
        border-radius: 4px;
    }

    .new-arrivals .products .product-cart-wrap {
        flex: 0 0 250px;
        scroll-snap-align: start;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
        .new-arrivals .products .product-cart-wrap {
            flex: 0 0 180px;
        }
    }

    @media (max-width: 480px) {
        .new-arrivals .products .product-cart-wrap {
            flex: 0 0 150px;
        }
    }
</style>

