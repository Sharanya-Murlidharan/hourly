<section class="new-arrivals">
    <h3>New arrivals</h3>
    <div class="products">
        <% for(let i=0; i<products.length; i++) { %>
        <div class="product-cart-wrap mb-30">
            <div class="product-img-action-wrap">
                <div class="product-img product-img-zoom">
                    <a href="/productDetails?id=<%=products[i]._id%>">
                        <img class="default-img" 
                             src="/<%=products[i].productImage[0]%>" 
                             alt="<%=products[i].productName%>">
                        <!-- Debugging: Log image path -->
                        <script>console.log("Image path: /Uploads/<%=products[i].productImage[0] || 'default.jpg' %>");</script>
                    </a>
                </div>
                <a href="/addToWishlist?id=<%=products[i]._id%>" class="wishlist-btn">
                    <i class="fa-solid fa-heart" style="color: #e02200;"></i>
                </a>
            </div>
            <div class="product-content-wrap">
                <h6><%=products[i].productName%></h6>
                <h5><%=products[i].salePrice%></h5>
                <a href="/addToCart?id=<%=products[i]._id%>">Add To Cart</a>
            </div>
        </div>
        <% } %>
    </div>
</section>

