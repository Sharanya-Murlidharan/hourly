    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Poppins', sans-serif;
        }

        :root {
            --primary-color: #FFAA8A;
            --primary-dark: #FF8C61;
            --primary-light: #FFD4C5;
            --secondary-color: #2D3047;
            --text-dark: #2D3047;
            --text-light: #6B7280;
            --background-light: #FFF5F2;
            --white: #FFFFFF;
            --menu-icon-color: #2D3047; /* Updated to #2D3047 for icons */
            --active-item-bg: #EEEEFF;
            --active-menu-color: #2D3047; /* Updated to #2D3047 for active icons */
            --toggle-color: #3D639E; /* Kept for toggle button */
        }

        body {
            background-color: var(--background-light);
        }

        .sidebar-toggle {
            position: fixed;
            top: 25px;
            left: 13px;
            width: 40px;
            height: 40px;
            background-color: var(--toggle-color); /* Kept as #3D639E */
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            z-index: 1000;
            box-shadow: 0 4px 8px rgba(61, 99, 158, 0.2); /* Adjusted shadow color */
            transition: all 0.3s ease;
        }

        .sidebar-toggle:hover {
            background-color: #2D4A8C; /* Darker shade of #3D639E */
        }

        .sidebar-toggle svg {
            color: white;
            width: 24px;
            height: 24px;
        }

        aside.sidebar {
            width: 240px;
            height: 100vh;
            background-color: #DBE4F0;
            box-shadow: 0 10px 20px rgba(45, 48, 71, 0.08);
            display: flex;
            flex-direction: column;
            position: fixed;
            top: 0;
            left: 0;
            overflow-y: auto;
            border-radius: 0 15px 15px 0;
            transition: all 0.3s ease;
            z-index: 999;
        }

        aside.sidebar.collapsed {
            width: 80px;
        }

        .logo-container {
            padding: 20px 15px;
            text-align: center;
            margin-bottom: 10px;
            position: relative;
            transition: all 0.3s ease;
        }

        .sidebar.collapsed .logo-container {
            padding: 20px 10px;
        }

        .brand-name {
            font-family: 'Amarante', cursive; /* Updated to Amarante font */
            font-size: 32px;
            font-weight: 600;
            color: var(--text-dark);
            letter-spacing: 0.5px;
            margin-top: 5px;
            text-transform: uppercase;
            transition: all 0.3s ease;
        }

        .sidebar.collapsed .brand-name {
            font-size: 0;
            opacity: 0;
        }

        .brand-tagline {
            display: none;
        }

        .menu-item {
            display: flex;
            align-items: center;
            padding: 12px 20px;
            color: var(--text-dark);
            text-decoration: none;
            transition: all 0.3s ease;
            margin: 2px 8px;
            border-radius: 8px;
            position: relative;
        }

        .sidebar.collapsed .menu-item {
            padding: 12px 0;
            justify-content: center;
        }

        .menu-item:hover {
            background-color: var(--active-item-bg);
            color: var(--active-menu-color);
        }

        .menu-item.active {
            background-color: var(--active-item-bg);
            color: var(--active-menu-color);
        }

        .menu-item i, .menu-item .icon svg {
            font-size: 18px;
            min-width: 28px;
            color: var(--menu-icon-color); /* Updated to #2D3047 */
            transition: all 0.3s ease;
            display: flex;
            justify-content: center;
        }

        .sidebar.collapsed .menu-item i {
            min-width: 24px;
            margin: 0;
        }

        .menu-item.active i,
        .menu-item.active .icon svg {
            color: var(--active-menu-color); /* Updated to #2D3047 */
        }

        .menu-item span {
            font-size: 14px;
            margin-left: 10px;
            font-weight: 500;
            position: relative;
            z-index: 1;
            transition: all 0.3s ease;
            white-space: nowrap;
        }

        .sidebar.collapsed .menu-item span {
            width: 0;
            margin-left: 0;
            opacity: 0;
            overflow: hidden;
        }

        .badge {
            background-color: var(--primary-dark);
            color: var(--white);
            border-radius: 50%;
            padding: 2px 6px;
            font-size: 10px;
            margin-left: auto;
            font-weight: 600;
        }

        .sidebar.collapsed .badge {
            position: absolute;
            top: 8px;
            right: 8px;
            margin-left: 0;
        }

        .logout {
            margin-top: auto;
            color: #ff3b30;
            margin: 2px 8px;
            margin-top: auto;
        }

        .logout i, .logout svg {
            color: #ff3b30;
        }

        .sidebar.collapsed .logout {
            padding: 12px 0;
            justify-content: center;
        }

        .main-content {
            margin-left: 240px;
            padding-top: 80px;
            transition: all 0.3s ease;
        }

        .main-content.expanded {
            margin-left: 80px;
        }

        .admin-header {
            background: #DBE4F0;
            box-shadow: 0 2px 4px rgba(45, 48, 71, 0.1);
            padding: 1rem 2rem;
            position: fixed;
            top: 0;
            left: 240px;
            right: 0;
            z-index: 998;
            transition: all 0.3s ease;
        }

        .main-content.expanded + .admin-header,
        .sidebar.collapsed ~ .admin-header {
            left: 80px;
        }

        .header-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            max-width: 1400px;
            margin: 0 auto;
        }

        .logo-section h1 {
            color: var(--text-dark);
            font-size: 1.5rem;
            margin: 0;
        }

        .account-section {
            position: relative;
        }

        .account-btn {
            background: var(--background-light);
            border: none;
            padding: 8px 15px;
            display: flex;
            align-items: center;
            gap: 12px;
            cursor: pointer;
            color: var(--text-dark);
            font-size: 1rem;
            border-radius: 50px;
            transition: all 0.3s ease;
        }

        .account-btn:hover {
            background-color: var(--primary-light);
        }

        .admin-name {
            margin: 0 5px;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            right: 0;
            top: 120%;
            background: var(--white);
            min-width: 200px;
            border-radius: 8px;
            box-shadow: 0 4px 12px rgba(45, 48, 71, 0.1);
            padding: 8px 0;
            z-index: 1001;
        }

        .dropdown-content.show {
            display: block;
        }

        .dropdown-content a {
            color: var(--text-dark);
            padding: 12px 16px;
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 10px;
            transition: background-color 0.3s;
        }

        .dropdown-content a:hover {
            background-color: var(--primary-light);
        }

        .dropdown-divider {
            height: 1px;
            background-color: var(--primary-light);
            margin: 8px 0;
        }

        .logout-btn {
            color: #FF4B4B !important;
        }

        .logout-btn:hover {
            background-color: #FFF0F0 !important;
        }

        .admin-profile-img {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            object-fit: cover;
            border: 2px solid var(--primary-color);
            padding: 2px;
        }

        @media (max-width: 992px) {
            .sidebar-toggle {
                display: flex;
                top: 8px;
                left: 25px;
            }

            aside.sidebar {
                transform: translateX(-100%);
            }

            aside.sidebar.mobile-visible {
                transform: translateX(0);
            }

            .main-content {
                margin-left: 0;
            }

            .admin-header {
                left: 0;
            }
        }

        @media (max-width: 768px) {
            .header-container {
                flex-direction: column;
                align-items: flex-start;
            }

            .account-section {
                margin-top: 1rem;
                align-self: flex-end;
            }

            .admin-header {
                padding: 1rem;
            }
        }
    </style>
